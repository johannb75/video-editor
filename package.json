{
  "name": "video-editor",
  "private": true,
  "scripts": {
    "postinstall": "cd ./packages/app && expo-yarn-workspaces postinstall",
    "app:start": "lerna run start --scope @video-editor/native --stream --no-prefix",
    "web:start": "lerna run start --scope @video-editor/web --stream --no-prefix"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/expo",
      "**/expo/**"
    ]
  }
}